{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"module": "commonjs",
		"target": "ES6",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node", "jest"],
		"moduleResolution": "node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src/**/*.ts", "__test__"],
	"exclude": ["node_modules"]
}
